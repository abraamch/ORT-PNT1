@model IEnumerable<HistoriaClinica>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.PacienteId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HistoriaClinicaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HistoriaClinicaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HistoriaClinicaId">Delete</a>
                <a asp-action="Create" asp-controller="Episodios" asp-route-id="@item.PacienteId">Agregar Episodio</a>
                   
            </td>
        </tr>
}
    </tbody>
</table>
